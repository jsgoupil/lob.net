<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <AssemblyName>Lob.Net</AssemblyName>
    <RootNamespace>Lob.Net</RootNamespace>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>
  
  <PropertyGroup>
    <Description>Wrapper for the Lob.com API. Send snail mail with this .NET API.</Description>
    <Author>Jean-Sébastien Goupil</Author>
    <Authors>Jean-Sébastien Goupil</Authors>
    <Title>Lob.Net - Snail Mail API</Title>
    <Copyright>Copyright © Jean-Sébastien Goupil 2018</Copyright>
    <Version>1.0.0-beta3</Version>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>mail snailmail lob postage letter postcard check</PackageTags>
    <PackageLicenseUrl>https://raw.githubusercontent.com/jsgoupil/lob.net/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jsgoupil/lob.net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jsgoupil/lob.net</RepositoryUrl>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="2.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

</Project>
